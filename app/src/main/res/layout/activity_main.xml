<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/coin_text_1"
        style="@style/whiteBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_wide"
        android:paddingTop="@dimen/margin_wide"
        android:paddingEnd="@dimen/margin_wide"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/coin_text_2"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coin_text_2"
        style="@style/whiteBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_wide"
        android:paddingTop="@dimen/margin_wide"
        android:paddingEnd="@dimen/margin_wide"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/coin_text_3"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coin_text_1" />

    <TextView
        android:id="@+id/coin_text_3"
        style="@style/whiteBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="@dimen/margin_wide"
        android:paddingTop="@dimen/margin_wide"
        android:paddingEnd="@dimen/margin_wide"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coin_text_2" />

    <ImageView
        android:id="@+id/imageView"
        style="@style/cryptoIcon"
        app:layout_constraintBottom_toBottomOf="@+id/coin_text_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coin_text_1"
        app:srcCompat="@drawable/btc_img" />

    <ImageView
        android:id="@+id/imageView2"
        style="@style/cryptoIcon"
        app:layout_constraintBottom_toBottomOf="@+id/coin_text_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coin_text_2"
        app:srcCompat="@drawable/eth_img" />

    <ImageView
        android:id="@+id/imageView3"
        style="@style/cryptoIcon"
        app:layout_constraintBottom_toBottomOf="@+id/coin_text_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coin_text_3"
        app:srcCompat="@drawable/usdt_img" />

</androidx.constraintlayout.widget.ConstraintLayout>