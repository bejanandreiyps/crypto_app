<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivRMImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/deaf_string" />

    <TextView
        android:id="@+id/tvRMName"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:maxWidth="70dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/ivRMImage"
        app:layout_constraintLeft_toLeftOf="@id/ivRMImage"
        app:layout_constraintRight_toRightOf="@id/ivRMImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>
