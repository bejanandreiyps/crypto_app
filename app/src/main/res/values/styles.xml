<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="whiteBox">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/box_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="cryptoIcon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="welcome">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="please_enter">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="InputTextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>
</resources>