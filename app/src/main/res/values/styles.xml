<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="whiteBox">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/box_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="cryptoIcon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="welcome">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="please_enter">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="InputTextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>
    <style name="CategoryTag">
        <item name="android:background">@drawable/category_tag</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="OutInCinemasTag">
        <item name="android:background">@drawable/ic_group_3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>